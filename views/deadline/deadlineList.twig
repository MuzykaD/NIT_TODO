{% extends 'layout.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    <table class="table table-striped">
        {% for deadline in deadlines %}
            <tr>
                <td width="20px">
                    <a href="{{ deadline.url }}/edit" data-toggle="tooltip" title="Edit"><i class="far fa-edit"></i></a>
                </td>
                <td>
                    {{ deadline.date|date('d.m.Y H:i') }}
                </td>
                <td>
                    <a style="color: {{ deadline.entity.color.name }}; font-weight: bold" href="/entity/{{ deadline.entity.id }}">{{ deadline.entity.name }}</a>
                </td>
                <td>
                    {{ deadline.name }}
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
