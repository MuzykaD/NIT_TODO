{% extends 'layout.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    <form action="/habit/add" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" class="form-control">
        </div>
        <div class="form-group">
            <label>Month target</label>
            <input type="text" name="thisMonthTargetCount" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

{% endblock %}
