<style>


</style>

<div class="rightF point"> <!--позиція -->
    <div class>
        <h3 class="today"> Today</h3>

        <details open class="fix-frame">
            <summary class="style-for-today-detail-list">Events 📅</summary>

            {% for event in events %}

                {% if event.timeStart|date('Y-m-d') == date()|date('Y-m-d')%}

                    {% if event.timeStart|date('H:i') >= date()|date('H:i') %}
                       <div style="margin-left: 10px">{{ event.entity.name }} ({{ event.name }}) - {{event.timeEnd|date('H:i')}}</div>

                    {% elseif event.timeStart|date('H:i') <= date()|date('H:i') %}
                        <div style="margin-left: 10px"><strike>{{ event.entity.name }} ({{ event.name }}) - {{event.timeEnd|date('H:i')}}</strike></div>

                    {% endif %}

                {% endif %}

            {% endfor %}

        </details>
        
        <details open class="fix-frame">
            <summary class="style-for-today-detail-list">Deadlines 💀</summary>

            {% for deadline in deadlines %}
                {% if deadline.date|date('Y-m-d') == date()|date('Y-m-d') %}
                    <div style="margin-left: 10px">{{ deadline.entity.name }} ({{ deadline.name }})</div>
                {% endif %}
                
            {% endfor %}

        </details>

        <details open class="fix-frame">
            <summary class="style-for-today-detail-list">Habits 💪</summary>

            {% for habit in habits %}
                <input type="checkbox" id="_checkbox">
                <label>
                    <div id="tick_mark">{{habit.name}}</div>
                </label>
            {% endfor %}

        </details>

        <details open class="fix-frame">
            <summary class="style-for-today-detail-list"> To do ✅</summary>
            {% for todo in todos %}
                <li>
                    <input type="checkbox" class="css-checkbox"/>
                    {{ todo.name }}
                </li>
            {% endfor %}
        </details>

        <div style="display: inline-block;">
            <button class="circle-button" data-toggle="modal" data-target="#addTodoModal" onclick="load_form('/todo/add/{{ todo.id }}', '#form_add_todo')">
                +
            </button>
        </div>

        <div class="modal fade" id="addTodoModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="modalLabel"> Add new Todo </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="form_add_todo" style="margin: 10px">
                        {# форму тянемо ajax #}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>