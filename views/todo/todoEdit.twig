{% extends 'layout.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    <form action="/todo/{{ todo.id }}/update" method="post">

        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" value="{{ todo.name }}" class="form-control">
        </div>

        <div class="form-group">
            <label>Date</label>
            <input type="date" name="date" class="form-control" value="{{ todo.date|date('Y-m-d') }}" required>
        </div>

        <div class="modal-footer menu-buttons-container">
            <button type="submit" class="rounded-button">Save</button>
        </div>
    </form>

{% endblock %}
