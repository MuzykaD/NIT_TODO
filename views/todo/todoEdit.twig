{% extends 'layout.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    <form action="/todo/{{ todo.id }}/update" method="post">

        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" value="{{ todo.name }}" class="form-control">
        </div>

        <div class="form-group">
            <label>Date (yyyy.mm.dd)</label>
            <input type="text" name="date" class="form-control" value="{{ todo.date|date('Y.m.d') }}" required>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>

{% endblock %}
