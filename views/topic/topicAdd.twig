{% extends 'layout.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    <form action="/topic/add" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" class="form-control">
        </div>
        <div class="form-group">
            <ul class='dropdown-menu'>
                {% for user in users %}
                <li>
                    <a href="#" data-id="{{user.getId() }}">
                        {{ user.name() }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

{% endblock %}
