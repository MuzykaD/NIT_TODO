{% extends 'layout.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    <form action="/todo/{{ topic.id }}/update" method="post">

        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" value="{{ topic.name }}" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>

{% endblock %}
