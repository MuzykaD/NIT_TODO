{% extends 'layout.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    <table class="table table-striped">
        {% for topic in topics %}
            <tr>
                <td width="20px">
                    <a href="{{ topic.url }}/edit" data-toggle="tooltip" title="Edit"><i class="far fa-edit"></i></a>
                </td>
                <td>
                    <a href="{{ topic.url }}" title="Detail">{{ topic.name }}</a>
                </td>
            </tr>
        {% endfor %}
    </table>

    <br>
    <a href="/topic/add">Add topic</a>

{% endblock %}
