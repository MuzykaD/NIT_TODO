{% extends 'layoutForLogin.twig' %}

{% block body %}

    <form action="/user/add" method="post">
        <div class="register-box">
            <h1>Registration</h1>
            <div class="textbox">
                <i class="fas fa-user"></i>
                <input 
                    type="text" 
                    name="name"
                    placeHolder="Username" 
                     required>
            </div>

            <div class="textbox">
                <i class="fas fa-envelope"></i>
                <input 
                    type="email" 
                    name="email"
                    placeHolder="Email" 
                    aria-describedby="emailHelp" required>
            </div>

            <div class="textbox">
                <i class="fas fa-lock"></i>
                <input
                     type="password" 
                     name="password" 
                     placeHolder="Password"
                      required>
            </div>

            <div class="menu-buttons-container"
                 style="margin-top: 10px; text-align: center;">
                <button type="submit" 
                        id="register-save"
                        class="rounded-button">Create account
                </button>
            </div>

            
        <div class="a-divider">
            <h5>Already have an account?</h5>
        </div>
            
            <div class="menu-buttons-container">
             <button type="button" 
                     style="width: 100%"
                     id="backToLogin"
                     class="rounded-button" 
                     onclick="location.href='/user/logout'">
                     Back to Login
                    </button>
            <div>

            <div style="margin-bottom: 20px; height: 30px; font-size: 18px">
                {% if error is same as (true) %}
                    This email is already in use.
                {% endif %}
            </div>

        </div>
    </form>

{% endblock %}