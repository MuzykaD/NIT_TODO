{% extends 'layoutForLogin.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    <form action="/user/login" method="post">
        <div class="form-group">
            <label for="exampleInputEmail">E-mail</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" required>
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" required>
        </div>

        <div class="menu-buttons-container">
            <button type="submit" class="rounded-button">Login</button>
        </div>

        <div style="margin-top: 10px">
            <a href="/user/add">Create account</a>
        </div>


        {% if error is same as (true) %}
            <br><br>Email or password is wrong.
        {% endif %}
    </form>

{% endblock %}
