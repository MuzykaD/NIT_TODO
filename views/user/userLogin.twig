{% extends 'layoutForLogin.twig' %}

{% block body %}

        <form action="/user/login" method="post" class="box">
            <div class="login-box">
                <h1>Login</h1>
                <div class="textbox">
                <i class="fas fa-envelope"></i>
                    <input 
                        type="email" 
                        name="email"
                        placeHolder= "Email"
                        aria-describedby="emailHelp" required>
                </div>

                <div class="textbox">
                <i class="fas fa-lock"></i>
                    <input
                        type="password" 
                        name="password" 
                        placeHolder="Password" 
                        class="" required>
                </div>

                <div class="menu-buttons-container">
                    <button style="margin-top: 10px;"
                        type="submit"
                        class="rounded-button">Login
                    </button>
                </div>

                <div class="menu-buttons-container">
                    <button
                         class="rounded-button" 
                         onClick="location.href='/user/add'">Register
                    </button>
                </div>


                {% if error is same as (true) %}
                    <br><br>Email or password is wrong.
                {% endif %}
            </div>    
        </form>

{% endblock %}
